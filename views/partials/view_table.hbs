<center><h1 class="view_table">All Customer Views_Table</h1></center>
<center> 
    <div class="search_container">
        <form class="search" action="">
            <input type="search" placeholder="Search here..." required>
             <button type="submit">Search</button>
        </form>
    </div>
    <table class="tabel_container">
        <thead>
            <tr>
                <th >ID</th>
                <th>Male</th>
                <th>Female</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Countrycode</th>
                <th>Contact Nummber</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each rows}}
            <tr>
                <th>{{this.id}}</th>
                <td>{{this.male}}</td>
                <td>{{this.female}}</td>
                <td>{{this.firstname}}</td>
                <td>{{this.lastname}}</td>
                <td>{{this.countrycode}}</td>
                <td>{{this.contact}}</td>
                <td>{{this.email}}</td>
                <td class="text-end">
            
                    <a href="/views/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                    <a href="/index/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
                    <a href="/{{this.id}}" type="button" class="btn btn-hard btn-small"><i class="bi bi-person-x"></i> Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</center>
